#include <iostream>
#include <memory>


template <typename T>
class shared_ptr {
public:
    shared_ptr() : ptr(nullptr), count(new int(1)) {}

    shared_ptr(T* str) : ptr(str), count(new int(1)) {}

    ~shared_ptr() {
        release();
    }

    shared_ptr(const shared_ptr& oth) {
        ptr = oth.ptr;
        count = oth.count;
        (*count)++;
    }

    shared_ptr(shared_ptr&& oth) {
        ptr = oth.ptr;
        count = oth.count;
        oth.ptr = nullptr;
        oth.count = nullptr;
    }

    shared_ptr& operator=(const shared_ptr& oth) {
        if (this != &oth) {
            release();
            ptr = oth.ptr;
            count = oth.count;
            *count += 1;
        }

        return *this;
    }

    shared_ptr& operator=(shared_ptr&& oth) {
        if (this != &oth) {
            release();
            ptr = oth.ptr;
            count = oth.count;
            oth.ptr = nullptr;
            oth.count = nullptr;
        }

        return *this;
    }

    int use_count() {
        return *count;
    }

    T* get() {
        return ptr;
    }

    T& operator*() {
        return *ptr;
    }

    T* operator->() {
        return ptr;
    }

    void reset(T* new_ptr = nullptr) {
        release();
        ptr = new_ptr;
        count = new int(1);
    }
    
private:
    void release() {
        if(--(*count) == 0) {
            delete ptr;
            delete count;
        }
    }

    T* ptr;
    int* count; 
};
